<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_recipes_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/image_view_recipes_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_recipes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_recipes_icon_container"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="Resto Name"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/navigation"
            android:layout_alignTop="@+id/card_view_recipes_icon_container"
            android:layout_marginStart="160dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/text_view_recipes_title" />

        <TextView
            android:id="@+id/text_view_recipe_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_recipes_title"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="Location: " />

        <TextView
            android:id="@+id/text_view_calories_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_recipe_details"
            android:layout_alignBottom="@id/card_view_recipes_icon_container"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="Calories: " />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
