<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_recipes_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/image_view_recipes_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/thank_you" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_restoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_recipes_icon_container"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="Resto Name"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/epilogue_bold"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/card_view_recipes_icon_container"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_unsaved_place" />

        <TextView
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_restoname"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="Location: " />


        <TextView
            android:id="@+id/text_view_recipe_location_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_restoname"
            android:layout_toEndOf="@id/text_view_location"
            android:text="Fx Sudirman Mall" />


        <TextView
            android:id="@+id/text_view_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_location"
            android:layout_toEndOf="@id/card_view_recipes_icon_container"
            android:text="4.8" />

        <TextView
            android:id="@+id/text_view_sepparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/text_view_location"
            android:layout_toEndOf="@id/text_view_rating"
            android:text="-" />

        <TextView
            android:id="@+id/text_view_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_location"
            android:layout_toEndOf="@id/text_view_sepparator"
            android:text="900 m" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
